@{
    Layout = null;
    ViewData["Title"] = "Acesso negado";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>
    <title>Acesso negado</title>
</head>
<body class="white-text red darken-2 container" style="position:absolute;top:40%;left:20%">
    <div>
        <h1>Falta de acesso de usuário</h1>
        <h5>Olá, @User.Identity.Name ! Infelizmente você não tem o perfil de usuário para realizar essa ação.</h5>
    </div>
</body>
</html>
